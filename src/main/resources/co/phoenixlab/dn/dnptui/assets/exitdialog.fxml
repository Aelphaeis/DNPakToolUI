<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      alignment="CENTER" spacing="14"
      styleClass="dialog" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.phoenixlab.dn.dnptui.ExitDialogController">
    <Label fx:id="promptLbl" alignment="CENTER" textAlignment="CENTER" text="Are you sure you want to quit?"/>
    <HBox fx:id="buttonBar" spacing="20" alignment="CENTER">
        <Button prefWidth="60" text="Yes" onAction="#onYesBtn"/>
        <Button prefWidth="60" text="No" onAction="#onNoBtn"/>
    </HBox>
</VBox>
